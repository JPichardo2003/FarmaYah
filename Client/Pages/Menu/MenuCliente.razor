@page "/MenuClientes"
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime
<PageTitle>Home</PageTitle>
<div class="card" style="width:1000px">
    <div class="card-header ">
        <div class="col">
            <button @onclick="VolverAtras"><i class="bi bi-arrow-left-circle"></i></button>
        </div>
        <div class="col d-flex align-items-center justify-content-center">
            <img src="Images/pngwing.com.png" class="img-logo" />
            <h1>FarmaYah - Menú Clientes</h1>
        </div>
    </div>

    <div class="card-body">
        <div class="row justify-content-center">
            <div class="col-md-4 text-center">
                <button type="button" class="d-block mx-auto">
                    <img src="Images/icons8-cliente-64.png" class="icon" />Registrar Cliente
                </button>
            </div>
            <div class="col-md-4 text-center">
                <button class="d-block mx-auto">
                    <img src="Images/icons8-clientes-80.png" class="icon" />Clientes
                </button>
            </div>

        </div>
    </div>
</div>


@code {
    private async Task VolverAtras()
    {
        await JSRuntime.InvokeVoidAsync("history.back");
    }
}