@page "/MenuFactura"
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime

<PageTitle>Facturas</PageTitle>
<div class="card" style="width:1000px">
    <div class="card-header ">
        <div class="col">
            <button @onclick="Back"><i class="bi bi-arrow-left-circle"></i></button>
        </div>
        <div class="col d-flex align-items-center justify-content-center">
            <img src="Images/pngwing.com.png" class="img-logo" />
            <h1>FarmaYah - Menú Facturación</h1>
        </div>
    </div>
    <div class="card-header d-flex align-items-center justify-content-center">
    </div>
    <div class="card-body">
        <div class="row justify-content-center">
            <div class="col-md-4 text-center">
                <button type="button" @onclick="NavigateToFacturas" class="d-block mx-auto">
                    <img src="Images/icons8-factura-502.png" class="icon" />Nueva Factura
                </button>
            </div>
            <div class="col-md-4 text-center">
                <button class="d-block mx-auto">
                    <img src="Images/icons8-factura-50.png" class="icon" />Consultar Factura
                </button>
            </div>
            <div class="col-md-4 text-center">
                <button class="d-block mx-auto">
                    <img src="Images/icons8-factura-503.png" class="icon" />Estado De Factura
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    private void NavigateToFacturas()
    {
        NavigationManager.NavigateTo("/RFacturas");
    }

    public void Back()
    {
        NavigationManager.NavigateTo("/");
    }
}
